{
  "name": "buildo GitHub workflow extension",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "buildo's GitHub workflow extension",
  "homepage_url": "http://buildo.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "tabs",
    "webNavigation",
    "https://github.com/buildo/*/pulls/*"
  ],
  "background": {
    "scripts": [ "src/inject/background.js" ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/buildo/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ],
      "run_at": "document_end"
    }
  ]
}
